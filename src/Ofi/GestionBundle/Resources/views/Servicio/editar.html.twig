{%  extends '::forntend.html.twig' %}

{% block title %}FAC - Editar Servicio{% endblock %}
{% block metas %}
<meta name="description" content="Home">
<meta name="keywords" content="FAC">
<meta name="robots" CONTENT="noindex, nofollow">
{% endblock%}


 {% block stylesheets %}
 {{ parent() }}
 <script src="{{ asset('js/jquery-1.7.2.min.js') }}"></script>
 <link href="{{ asset('bundles/ofigestion/css/home.css') }}" rel="stylesheet" type="text/css" />
 <link href="{{ asset('css/menu.css') }}" rel="stylesheet" type="text/css" /> 
 <link href="{{ asset('bundles/ofigestion/css/empresa.css') }}" rel="stylesheet" type="text/css" /> 
 {% endblock%}






{% block cabecera %}
{% include 'OfiGestionBundle:Fijas:sesion.html.twig' %}
{% include 'OfiGestionBundle:Fijas:menu.html.twig' %} 
 {% endblock%}
 
 
 {% block body %}
 
 
 {% for flashMessage2 in app.session.flashbag.get('servicio') %}
    <div class="flash_ok">
        {{ flashMessage2 | raw }}
    </div>
{% endfor %}

{% for flashMessage2 in app.session.flashbag.get('servicio_error') %}
    <div class="flash_error">
        {{ flashMessage2 | raw }}
    </div>
{% endfor %}
 
 <h1>{{ entity.nombre }}</h1>

 <div id="caja_general">
 <form action="{{ path('ofi_gestion_actualizarservicio',
				{'idservicio':entity.id}) }}" 
				method="post" {{ form_enctype(edit_form) }}>
				
	<input type="hidden" name="_method" value="PUT" />
	{{ form_errors(edit_form) }}

		<div id="c_nombre">
			{{ form_label(edit_form.nombre,"Nombre:") }}
			{{ form_errors(edit_form.nombre) }}
			{{ form_widget(edit_form.nombre) }}
		</div>
		
		<div id="c_apellido">
			{{ form_label(edit_form.descripcion,"Descripci√≥n:") }}
			{{ form_errors(edit_form.descripcion) }}
			{{ form_widget(edit_form.descripcion) }}
		</div>
		
		<div id="c_nomsocial">
			{{ form_label(edit_form.precio,"Precio:") }}
			{{ form_errors(edit_form.precio) }}
			{{ form_widget(edit_form.precio) }}
		</div>		
	
				
		<div id="datos_envio">
		
		<button type="submit"  class="botones_verde" 
		title="Editar empresa" >Aplicar Cambios</button>
		  
		</div>
	 {{ form_rest(edit_form) }}
 </form> 
 
  
       
 {% endblock%}
 
 {% block footer %}
 {% include 'OfiGestionBundle:Fijas:footer.html.twig' %} 
 {% endblock%}
 

