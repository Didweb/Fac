{%  extends '::forntend.html.twig' %}

{% block title %}FAC - Crear Servicio{% endblock %}
{% block metas %}
<meta name="description" content="Home">
<meta name="keywords" content="FAC">
<meta name="robots" CONTENT="noindex, nofollow">
{% endblock%}


 {% block stylesheets %}
 {{ parent() }}
 <link href="{{ asset('bundles/gestionbundle/css/home.css') }}" rel="stylesheet" type="text/css" />
 <link href="{{ asset('css/menu.css') }}" rel="stylesheet" type="text/css" /> 
 <link href="{{ asset('bundles/ofigestion/css/empresa.css') }}" rel="stylesheet" type="text/css" /> 
 {% endblock%}






{% block cabecera %}
{% include 'OfiGestionBundle:Fijas:sesion.html.twig' %}
{% include 'OfiGestionBundle:Fijas:menu.html.twig' %} 
 {% endblock%}
 
 
 {% block body %}
 
 
 {% for flashMessage2 in app.session.flashbag.get('servicio') %}
    <div class="flash_ok">
        {{ flashMessage2 | raw }}
    </div>
{% endfor %}

{% for flashMessage2 in app.session.flashbag.get('servicio_error') %}
    <div class="flash_error">
        {{ flashMessage2 | raw }}
    </div>
{% endfor %}
 
 
 
 <div id="for_crear">
 <h2>Creación de nuevo servicio</h2>
 <form action="{{ path('ofi_gestion_crearnuevoservicio') }}" method="post" 
				{{ form_enctype(form_servicio) }} id="for_crear2">
        <input type="hidden" name="_method" value="POST" />
        {{ form_errors(form_servicio) }}
        	<div>
				{{ form_label(form_servicio.nombre,"Nombre:") }}
				{{ form_errors(form_servicio.nombre) }}
				{{ form_widget(form_servicio.nombre) }}
			</div>
			
			<div>
				{{ form_label(form_servicio.descripcion,"Descripción: ") }}
				{{ form_errors(form_servicio.descripcion) }}
				{{ form_widget(form_servicio.descripcion) }}
			</div>
			
			<div>
				{{ form_label(form_servicio.precio,"Precio:") }}
				{{ form_errors(form_servicio.precio) }}
				{{ form_widget(form_servicio.precio) }}
			</div>	

			<div>
				{{ form_label(form_servicio.caduca,"Caduca (nº de días):") }}
				{{ form_errors(form_servicio.caduca) }}
				{{ form_widget(form_servicio.caduca) }}
			</div>	
			

			<div id="datos_envio">
			<button type="submit"  class="botones_verde" 
					title="Crear Factura" >Crear Servicio</button>
		    </div>
         {{ form_rest(form_servicio) }}
 </form>  
 </div>     
 {% endblock%}
 
 {% block footer %}
 {% include 'OfiGestionBundle:Fijas:footer.html.twig' %} 
 {% endblock%}
