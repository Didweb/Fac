 <div id="crear_correo">
 <form id="form_correo" action="{{ path('ofi_gestion_crearccorreo',{'id': entity.empresa.id}) }}" method="post" {{ form_enctype(form_correo) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_errors(form_correo) }}

			<div id="c_correo_nombre">
				{{ form_label(form_correo.nombre,"Nombre:") }}
				{{ form_errors(form_correo.nombre) }}
				{{ form_widget(form_correo.nombre) }}
			</div>
			
			<div id="c_correo_mail">
				{{ form_label(form_correo.mail,"E-Mail:") }}
				{{ form_errors(form_correo.mail) }}
				{{ form_widget(form_correo.mail) }}
			</div>
			
			<div id="c_correo_cargo">
				{{ form_label(form_correo.cargo,"Cargo:") }}
				{{ form_errors(form_correo.cargo) }}
				{{ form_widget(form_correo.cargo) }}
			</div>		

			<div id="c_correo_boletin">
				{{ form_label(form_correo.boletin,"Bolet√≠n") }}
				{{ form_errors(form_correo.boletin) }}
				{{ form_widget(form_correo.boletin) }}
			</div>	
			
			<div id="datos_envio">
			
			<button type="submit"  class="botones_verde" title="Editar Correo" >Crear correo</button>
			  
		    </div>
         {{ form_rest(form_correo) }}
 </form> 
 </div>
