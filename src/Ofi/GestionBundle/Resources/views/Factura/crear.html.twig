{%  extends '::forntend.html.twig' %}

{% block title %}FAC - Crear Factura{% endblock %}
{% block metas %}
<meta name="description" content="Home">
<meta name="keywords" content="FAC">
<meta name="robots" CONTENT="noindex, nofollow">
{% endblock%}


 {% block stylesheets %}
 {{ parent() }}
 <link href="{{ asset('bundles/gestionbundle/css/home.css') }}" rel="stylesheet" type="text/css" />
 <link href="{{ asset('css/menu.css') }}" rel="stylesheet" type="text/css" /> 
 <link href="{{ asset('bundles/ofigestion/css/empresa.css') }}" rel="stylesheet" type="text/css" /> 
 {% endblock%}






{% block cabecera %}
{% include 'OfiGestionBundle:Fijas:sesion.html.twig' %}
{% include 'OfiGestionBundle:Fijas:menu.html.twig' %} 
 {% endblock%}
 
 
 {% block body %}
 
 
 {% for flashMessage2 in app.session.flashbag.get('factura') %}
    <div class="flash_ok">
        {{ flashMessage2 | raw }}
    </div>
{% endfor %}

{% for flashMessage2 in app.session.flashbag.get('factura_error') %}
    <div class="flash_error">
        {{ flashMessage2 | raw }}
    </div>
{% endfor %}
 
 
 
 <div id="for_crear">
 <h2>Creación de nueva factura</h2>
 <form action="{{ path('ofi_gestion_crearfactura') }}" method="post" 
				{{ form_enctype(form_factura) }} id="for_crear2">
        <input type="hidden" name="_method" value="POST" />
        {{ form_errors(form_factura) }}
        	<div>
				{{ form_label(form_factura.fecha,"Fecha (ddmmaaaa):") }}
				{{ form_errors(form_factura.fecha) }}
				{{ form_widget(form_factura.fecha) }}
			</div>
			
			<div>
				{{ form_label(form_factura.nfactura,"Nº Factura: ") }}
				{{ form_errors(form_factura.nfactura) }}
				{{ form_widget(form_factura.nfactura) }}
			</div>
			
			<div>
				{{ form_label(form_factura.empresa,"Empresa:") }}
				{{ form_errors(form_factura.empresa) }}
				{{ form_widget(form_factura.empresa) }}
			</div>	

			<div>
				{{ form_label(form_factura.tipofactura,"Tipo:") }}
				{{ form_errors(form_factura.tipofactura) }}
				{{ form_widget(form_factura.tipofactura) }}
			</div>	
			

			<div id="datos_envio">
			<button type="submit"  class="botones_verde" 
					title="Crear Factura" >Crear Factura</button>
		    </div>
         {{ form_rest(form_factura) }}
 </form>  
 </div>     
 {% endblock%}
 
 {% block footer %}
 {% include 'OfiGestionBundle:Fijas:footer.html.twig' %} 
 {% endblock%}
