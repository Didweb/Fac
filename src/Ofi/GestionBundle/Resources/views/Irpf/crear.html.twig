{%  extends '::forntend.html.twig' %}

{% block title %}FAC - Crear Irpf{% endblock %}
{% block metas %}
<meta name="description" content="Home">
<meta name="keywords" content="FAC">
<meta name="robots" CONTENT="noindex, nofollow">
{% endblock%}


 {% block stylesheets %}
 {{ parent() }}
	 <script src="{{ asset('js/jquery-1.7.2.min.js') }}"></script>
	 <script src="{{ asset('js/mostrar_divs.js') }}"></script>
	 <link href="{{ asset('bundles/ofigestion/css/home.css') }}" rel="stylesheet" type="text/css" />
	 <link href="{{ asset('css/menu.css') }}" rel="stylesheet" type="text/css" /> 
	 <link href="{{ asset('bundles/ofigestion/css/empresa.css') }}" rel="stylesheet" type="text/css" /> 
 {% endblock%}


{% block cabecera %}
{% include 'OfiGestionBundle:Fijas:sesion.html.twig' %}
{% include 'OfiGestionBundle:Fijas:menu.html.twig' %} 
 {% endblock%}
 
 
 {% block body %}

 {% for flashMessage2 in app.session.flashbag.get('irpf') %}
    <div class="flash_ok">
        {{ flashMessage2 | raw }}
    </div>
{% endfor %}

{% for flashMessage2 in app.session.flashbag.get('irpf_error') %}
    <div class="flash_error">
        {{ flashMessage2 | raw }}
    </div>
{% endfor %}
 
 <div id="crear_correo">
 
 <h1>Crear IRPF</h1>
 
 <form id="form_correo" action="{{ path('irpf_crear') }}" method="post" {{ form_enctype(form_irpf) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_errors(form_irpf) }}

			<div id="c_correo_nombre">
				{{ form_label(form_irpf.porcentaje,"Porcentaje:") }}
				{{ form_errors(form_irpf.porcentaje) }}
				{{ form_widget(form_irpf.porcentaje) }}
			</div>
			
			<div id="c_correo_mail">
				{{ form_label(form_irpf.inicio,"Inicio:") }}
				{{ form_errors(form_irpf.inicio) }}
				{{ form_widget(form_irpf.inicio) }}
			</div>
			
			<div id="c_correo_cargo">
				{{ form_label(form_irpf.final,"Final:") }}
				{{ form_errors(form_irpf.final) }}
				{{ form_widget(form_irpf.final) }}
			</div>		

			
			<div id="datos_envio">
			
			<button type="submit"  class="botones_verde" title="Crear Irpf" >Crear IRPF</button>
			  
		    </div>
         {{ form_rest(form_irpf) }}
 </form> 
 </div>
 {% endblock%}
 
 {% block footer %}
 {% include 'OfiGestionBundle:Fijas:footer.html.twig' %} 
 {% endblock%}
