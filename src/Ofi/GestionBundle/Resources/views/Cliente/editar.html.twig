{%  extends '::forntend.html.twig' %}

{% block title %}FAC - Inicio{% endblock %}
{% block metas %}
<meta name="description" content="Home">
<meta name="keywords" content="FAC">
<meta name="robots" CONTENT="noindex, nofollow">
{% endblock%}


 {% block stylesheets %}
 {{ parent() }}
 <link href="{{ asset('bundles/gestionbundle/css/home.css') }}" rel="stylesheet" type="text/css" />
 <link href="{{ asset('css/menu.css') }}" rel="stylesheet" type="text/css" /> 
 <link href="{{ asset('bundles/gestionbundle/css/cliente.css') }}" rel="stylesheet" type="text/css" /> 
 {% endblock%}






{% block cabecera %}
{% include 'OfiGestionBundle:Fijas:sesion.html.twig' %}
{% include 'OfiGestionBundle:Fijas:menu.html.twig' %} 
 {% endblock%}
 
 
 {% block body %}
 
 
 {% for flashMessage2 in app.session.flashbag.get('cliente') %}
    <div class="flash_ok">
        {{ flashMessage2 | raw }}
    </div>
{% endfor %}

{% for flashMessage2 in app.session.flashbag.get('cliente_error') %}
    <div class="flash_error">
        {{ flashMessage2 | raw }}
    </div>
{% endfor %}
 
 <h1>{{ entity.nombre }} {{ entity.apellido }}</h1>
 
 
 <form action="{{ path('ofi_gestion_crearcliente') }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_errors(edit_form) }}

			<div>
				{{ form_label(edit_form.nombre) }}
				{{ form_errors(edit_form.nombre) }}
				{{ form_widget(edit_form.nombre) }}
			</div>
			
			<div>
				{{ form_label(edit_form.apellido) }}
				{{ form_errors(edit_form.apellido) }}
				{{ form_widget(edit_form.apellido) }}
			</div>
			
			<div>
				{{ form_label(edit_form.nomsocial) }}
				{{ form_errors(edit_form.nomsocial) }}
				{{ form_widget(edit_form.nomsocial) }}
			</div>		
			
			<div id="datos_envio">
			
			<button type="submit"  class="botones_verde" title="Editar Cliente" >Aplicar Cambios</button>
			  
		    </div>
         {{ form_rest(edit_form) }}
 </form>       
 {% endblock%}
 
 {% block footer %}
 {% include 'OfiGestionBundle:Fijas:footer.html.twig' %} 
 {% endblock%}
